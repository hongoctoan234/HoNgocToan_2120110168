@model IEnumerable<MyClass.Models.Menu>
@{
    var menu = ViewBag.Menu;
}
<li style="font-size: medium;">
    <a href="~/@menu.Link">@menu.Name</a>
    <ul class="sub-menu">
        @foreach (var item in Model)
        {
            <li style="font-size:large;"><a href="~/@item.Link">@item.Name</a></li>
        }
    </ul>
</li>